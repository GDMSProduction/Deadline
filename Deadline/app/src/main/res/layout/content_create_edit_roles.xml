                android:paddingBottom="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtFakeTask3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
